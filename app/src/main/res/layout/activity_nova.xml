<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nova"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="divino.com.br.todolist2.NovaActivity"
    android:orientation="vertical">


    <TextView        android:id="@+id/txtTarefa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nova Atividade"/>


    <EditText
        android:id="@+id/txtNome"
        android:layout_below="@id/txtTarefa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btnTrocar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_Nova"
        android:onClick="inserirAtividade"
        android:layout_below="@id/txtTarefa"
        />





</LinearLayout>
